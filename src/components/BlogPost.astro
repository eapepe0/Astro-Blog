---
const {frontmatter, url} = Astro.props;


const date = new Date(frontmatter.date).toLocaleDateString('es-ES', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
});

console.log(frontmatter)
---

<div class="lg:flex">
    <img class="object-cover w-full h-56 rounded-lg lg:w-64" src={frontmatter.image} alt=`${frontmatter.img}-photo` transition:name={frontmatter.img}>

    <div class="flex flex-col justify-between py-6 lg:mx-6">
        <a href={`${url}`} class="text-xl font-semibold text-gray-800 hover:underline dark:text-white ">
           {frontmatter.title}
        </a>
        
        <span class="text-sm text-gray-500 dark:text-gray-300">Fecha: {date}</span>
    </div>
</div>